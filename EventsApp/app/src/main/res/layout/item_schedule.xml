<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvItemScheduleHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:gravity="right"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/ItemScheduleTitle"/>
            <TextView
                android:id="@+id/tvItemScheduleTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A.M."
                android:gravity="right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ItemScheduleSubtitle"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/tvItemScheduleConferenceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/tvItemScheduleNameSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/tvItemScheduleTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:ellipsize="end"
                android:lines="1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>